{
    "name": "@touhidrahman/simple-store",
    "version": "1.0.3",
    "description": "Simple store for managing state with Angular.",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "clean": "rimraf dist || rm -rf dist",
        "f": "pnpm run format",
        "format": "biome check . --write --unsafe --diagnostic-level=error",
        "githook": "pnpm lefthook install",
        "in": "pnpm i && pnpm githook",
        "lint": "biome lint . --skip=suspicious/noExplicitAny",
        "preinstall": "npx only-allow pnpm",
        "release:patch": "pnpm clean && pnpm build && pnpm version patch && git push && git push --tags && pnpm publish --access public",
        "release:minor": "pnpm clean && pnpm build && pnpm version minor && git push && git push --tags && pnpm publish --access public",
        "release:major": "pnpm clean && pnpm build && pnpm version major && git push && git push --tags && pnpm publish --access public"
    },
    "author": "Touhid Rahman <hello@touhidrahman.me>",
    "license": "MIT",
    "engines": {
        "node": ">=22"
    },
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/touhidrahman/simple-store.git"
    },
    "bugs": {
        "url": "https://github.com/touhidrahman/simple-store/issues"
    },
    "keywords": [
        "store",
        "state-management",
        "angular",
        "rxjs",
        "simple-store"
    ],
    "packageManager": "pnpm@10.28.0",
    "dependencies": {
        "destr": "^2.0.5",
        "es-toolkit": "^1.44.0",
        "rxjs": "^7.8.2",
        "serialize-javascript": "^7.0.2"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.13",
        "@types/node": "^24.10.9",
        "@types/serialize-javascript": "^5.0.4",
        "lefthook": "^2.0.15",
        "rimraf": "^6.1.2",
        "typescript": "^5.9.3"
    },
    "optionalDependencies": {
        "@biomejs/cli-darwin-x64": "~2.3.13",
        "@biomejs/cli-linux-x64": "~2.3.13",
        "@biomejs/cli-win32-x64": "~2.3.13"
    }
}
